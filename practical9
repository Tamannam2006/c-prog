#include <stdio.h>
int main() {
    int scores[50], n, i, j, temp;
    printf("Enter number of students: ");
    scanf("%d", &n);
    printf("Enter the scores:\n");
    for(i = 0; i < n; i++) {
        scanf("%d", &scores[i]);
    }
    for(i = 0; i < n-1; i++) {
        for(j = i+1; j < n; j++) {
            if(scores[i] < scores[j]) {
                temp = scores[i];
                scores[i] = scores[j];
                scores[j] = temp;
            }
        }
    }
    printf("Scores in Descending Order:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", scores[i]);
    }
}
