#include <stdio.h>

enum Menu {
    ADD = 1,
    SUBTRACT,
    MULTIPLY,
    DIVIDE
};

int main() {
    enum Menu choice;
    int a, b;

    printf("Simple Menu:\n");
    printf("1. Add\n");
    printf("2. Subtract\n");
    printf("3. Multiply\n");
    printf("4. Divide\n");

    printf("Enter your choice: ");
    scanf("%d", &choice);

    printf("Enter two numbers: ");
    scanf("%d %d", &a, &b);

    switch(choice) {
        case ADD:
            printf("Result = %d\n", a + b);
            break;
        case SUBTRACT:
            printf("Result = %d\n", a - b);
            break;
        case MULTIPLY:
            printf("Result = %d\n", a * b);
            break;
        case DIVIDE:
            if(b != 0)
                printf("Result = %d\n", a / b);
            else
                printf("Error! Division by zero\n");
            break;
        default:
            printf("Invalid Choice\n");
    }
}
