#include <stdio.h>
int main()
{
    int number;
    printf("enter the integer:");
    scanf("%d",&number);
    if(number>0)
    {
        printf("%d is a positive number\n", number);
    }
    else if (number<0)
{
    printf("%d is a negitive number\n", number);
}
else
{
    printf("the number is zero\n");
}

    return 0;
}
